<div class="col-6 mx-auto">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user_friends.each do |friend| %>
        <tr>
          <th scope="row"><%= friend.first_name %></th>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <%# To remove a friend from the portfolio you will need to pass in the friend object to the destoy path. %>
          <td><%= link_to "Remove", users_friends_path(friend), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-dark" %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>
